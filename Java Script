// First using the alert method to print to the screen

alert("My name: Belonwu Edwin Ebuka")
alert("My height: 6.4ft")
alert("My country: Nigeria")

// Second, using the document.write method to print to the screen
document.write("<strong>My name:</strong> Belonwu Edwin Ebuka")
document.write("<br>")
document.write("<strong>My height:</strong> 6.4ft")
document.write("<br>")
document.write("<strong>My country:</strong> Nigeria")
